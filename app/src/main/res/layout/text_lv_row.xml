<?xml version="1.0" encoding="utf-8"?>

<!--
    @author: Oliver Lester
    @description: This file holds the standard layout of the Text list view that can be seen at
        Notable Locations Page.
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/text_lv_row"
    android:background="@color/biege">

    <TextView
        android:id="@+id/text_lv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tangerine"
        android:layout_gravity="center"
        android:textSize="12.5pt"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        />

</LinearLayout>